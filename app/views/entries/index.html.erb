<h1>Listing Entries</h1>

<table border="1">
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Age</th>
      <th>Parent</th>
      <th>Pink</th>
      <th>Yellow</th>
      <th>Guard</th>
      
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= truncate(entry.lname,:length => 20) %></td>
		<td><%= truncate(entry.fname,:length => 20) %></td>
        <td><%= entry.age %></td>
        <td><%= truncate(entry.parent,:length => 20) %></td>
        <td> <span style="background-color: #FF1975"><%= entry.pink %></span> </td>
        <td> <span style="background-color: #FFFF00"><%= entry.yellow %></span> </td>
        <td><%= entry.guard %></td>
        <td><%= link_to 'Show', entry %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
